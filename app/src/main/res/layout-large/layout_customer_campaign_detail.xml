<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            app:cardBackgroundColor="#fcf1f1"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvStoreName"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvCampaignTitle"
                    android:enabled="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_styles"
                    android:textSize="28sp"
                    android:gravity="top"
                    android:lines="2"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:enabled="false"
                    android:id="@+id/tvCampaignContent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:lines="10"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    android:background="@drawable/border_styles"
                    android:textSize="28sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Kampanya İlan Tarihi"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPublishDate"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPublishHour"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnExit"
                        android:text="ÇIKIŞ"
                        android:background="@drawable/button_selector_rectangle"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>