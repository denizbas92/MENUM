<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Bildirim Sesi"
                android:textSize="32sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Switch
                android:paddingRight="40dp"
                android:id="@+id/swBeep"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Bildirim Işığı"
                android:textSize="32sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Switch
                android:paddingRight="40dp"
                android:id="@+id/swLight"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Bildirim Titreşimi"
                android:textSize="32sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Switch
                android:paddingRight="40dp"
                android:id="@+id/swVibration"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Bildirimleri Tamamen Kapat"
                android:textSize="32sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Switch
                android:paddingRight="40dp"
                android:id="@+id/swCloseNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <Button
            android:text="ÇIKIŞ"
            android:id="@+id/btnExit"
            android:textColor="#fff"
            android:textSize="28sp"
            android:background="@drawable/button_selector_rectangle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="70dp" />
    </LinearLayout>
</RelativeLayout>