<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etVertificationCode"
                    android:hint="Doğrulama Kodunuzu Giriniz"
                    android:inputType="number"
                    android:textColor="#614b4b"
                    android:textSize="38sp"
                    android:textColorHint="#614b4b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="Onayla"
                    android:textSize="40sp"
                    android:background="@drawable/button_selector_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />

                <Button
                    android:id="@+id/btnResendCode"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="TEKRAR KOD GÖNDER"
                    android:textSize="40sp"
                    android:background="@drawable/button_selector_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_weight="1"
                    android:text="ÇIKIŞ"
                    android:background="@drawable/button_selector_rectangle"
                    android:textColor="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="40sp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>