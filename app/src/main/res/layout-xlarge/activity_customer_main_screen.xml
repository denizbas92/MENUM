<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative">

    <LinearLayout
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onClick"
            android:id="@+id/btnPersonnel"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="PERSONELLER"
            android:background="@drawable/button_selector_rectangle"
            android:fontFamily="@font/allerta_stencil"
            android:textColor="#fff"
            android:textSize="36sp" />
        <Button
            android:onClick="onClick"
            android:id="@+id/btnRegister"
            android:layout_margin="5dp"
            android:text="KAYIT OL"
            android:layout_weight="1"
            android:background="@drawable/button_selector_rectangle"
            android:fontFamily="@font/allerta_stencil"
            android:textColor="#fff"
            android:textSize="36sp"
            android:layout_width="match_parent"
            android:layout_height="90dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/button_selector_rectangle"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="onClick"
        android:text="MENÜ"
        android:textColor="#fff"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="140dp"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <Button
            android:onClick="onClick"
            android:id="@+id/btnAdviceComplaint"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="ÖNERİ/ŞİKAYET"
            android:background="@drawable/button_selector_rectangle"
            android:fontFamily="@font/allerta_stencil"
            android:textColor="#fff"
            android:textSize="36sp" />

        <Button
            android:onClick="onClick"
            android:id="@+id/btnCampaign"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="KAMPANYA/DUYURU"
            android:background="@drawable/button_selector_rectangle"
            android:fontFamily="@font/allerta_stencil"
            android:textColor="#fff"
            android:textSize="36sp" />
    </LinearLayout>
</RelativeLayout>