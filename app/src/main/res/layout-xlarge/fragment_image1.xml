<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<RelativeLayout
    android:layout_marginTop="70dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/fragment_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#f7f7f5"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvChangeAdd"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_add_large"
                android:text="Ekle/Değiştir"
                android:textSize="38sp" />
            <TextView
                android:id="@+id/tvDelete"
                android:text="Sil"
                android:background="@drawable/border_separete"
                android:drawableLeft="@drawable/ic_delete_normal"
                android:gravity="center"
                android:textSize="38sp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
        </LinearLayout>
        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
</FrameLayout>