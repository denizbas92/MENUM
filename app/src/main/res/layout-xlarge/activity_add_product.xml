<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Ürün Ekle"
                android:textSize="45sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint="Ürün Adı Giriniz : "
                    android:id="@+id/etProductName"
                    android:textSize="37sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint="Ürün Fiyatı Giriniz : "
                    android:id="@+id/etProductPrice"
                    android:textSize="37sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint="Ürün Açıklaması Giriniz : "
                    android:id="@+id/etProductExplanation"
                    android:textSize="37sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint="Ürün Servis Süresi Giriniz :(İsteğe Bağlı) "
                    android:id="@+id/etProductServiceTime"
                    android:textSize="37sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnUploadImage"
                android:text="Ürün Resmi Ekle"
                android:textSize="37sp"
                android:textColor="#fff"
                android:background="@drawable/button_main_screen"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <TextView
                android:gravity="center"
                android:textSize="36sp"
                android:textStyle="bold|italic"
                android:text="NOT: Ürün resmi ekleme isteğe bağlıdır. Resim eklememeniz halinde sadece beyaz resim kullanılır. Cihazını yatay modda kullanarak çekim yapınız."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="#ccc"
                android:id="@+id/imProduct"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_weight="1"
                    android:text="ÇIKIŞ"
                    android:background="@drawable/button_selector_rectangle"
                    android:textColor="#fff"
                    android:layout_margin="5dp"
                    android:textSize="35sp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="EKLE"
                    android:textSize="35sp"
                    android:background="@drawable/button_selector_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>