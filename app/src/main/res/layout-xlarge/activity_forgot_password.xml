<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center"
            android:text="ŞİFRE DEĞİŞTİR"
            android:textSize="43sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Kullanıcı Adınızı Giriniz.."
                android:textSize="38sp"
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="En çok sevdiğiniz yemek hangisi ?"
                android:textSize="35sp"
                android:id="@+id/rbFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbCity"
                android:textSize="35sp"
                android:text="En çok hangi şehire gitmek istersiniz ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbBook"
                android:textSize="35sp"
                android:text="En çok sevdiğiniz kitap hangisi ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            android:textSize="38sp"
            android:id="@+id/tvQuestion"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="38sp"
            android:id="@+id/tvAnswer"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnControl"
            android:text="KONTROL ET"
            android:textColor="#fff"
            android:textSize="43sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_selector_rectangle"
            android:layout_width="match_parent"
            android:layout_height="90dp" />

        <android.support.design.widget.TextInputLayout
            android:visibility="invisible"
            android:id="@+id/etP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Şifrenizi Giriniz"
                android:textSize="38sp"
                android:id="@+id/etPassword"
                android:inputType="numberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:visibility="invisible"
            android:id="@+id/etP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Şifrenizi Tekrar Giriniz"
                android:textSize="38sp"
                android:inputType="numberPassword"
                android:id="@+id/etPasswordAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSave"
            android:visibility="invisible"
            android:text="KAYDET"
            android:textColor="#fff"
            android:textSize="43sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_selector_rectangle"
            android:layout_width="match_parent"
            android:layout_height="90dp" />
    </LinearLayout>
</RelativeLayout>