<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="AYARLAR"
            android:textSize="45sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardPhoneNumber"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Cep Numarası Değiştir"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardUserName"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Kullanıcı Adı Değiştir"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardAccount"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Hesap Ayarları"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardPassword"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Şifre Ayarları"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardNotification"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Bildirim Ayarları"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardBackgroundImage"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Arka Plan Resmi Ayarları"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardResetPassword"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Parola Reset Sorusu Değiştir"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:text="GERİ"
        android:textColor="#fff"
        android:textSize="40sp"
        android:background="@drawable/button_selector_rectangle"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
</RelativeLayout>